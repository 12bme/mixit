{{> header}}

<div class="mxt-wrapper--page-title">
    <div class="row">
        <div class="columns large-8 large-offset-2 text-center">
                <ul class="menu">
                {{#speakers}}
                    <li>
                        <img src="https://www.gravatar.com/avatar/{{logoUrl}}?size=150" class="mxt-img--speakers__talk">
                        <div class="mxt-text--speakername">{{firstname}}&nbsp;{{lastname}}</div>
                    </li>
                {{/speakers}}
                </ul>
        </div>
    </div>
</div>

<div class="mxt-wrapper--page-content">
    <div class="row">
        <div class="column large-8 large-offset-2">
            <article class="callout">
                <h1 class="text-center mxt-title--talk">{{talk.title}}</h1>
                <hr /> 
                <div class="lead">{{talk.summary}}</div>            
                {{talk.description}}
                <p class="subheader"><strong>
                    {{#talk.video}}
                        <hr />
                        | &#x25ba;&nbsp;{{#i18n}}talk.video.watch{{/i18n}} <a href="{{talk.video}}">{{#i18n}}talk.video.thevideo{{/i18n}}</a>
                    {{/talk.video}}
                </strong></p>
                <hr />
                <div class="row">
                    <div class="small-12 medium-4 medium-push-8 columns mxt-wrapper--talk-details">
                        <img src="/images/svg/mxt-icon--cat5.svg" class="mxt-icon--cat mxt-icon--cat__talks" alt="{{#i18n}}home.topics.hacktivism.title{{/i18n}}">
                        <p class="mxt-text--cat mxt-text--cat5">Hacktivism</p>
                        <p>â€”</p>
                        <div><strong>#{{talk.format}}</strong></div>
                        <ul class="menu vertical">
                            <li>{{#talk.date}}{{talk.date}}{{/talk.date}}</li>
                            <li>{{#talk.start}}{{talk.start}} - {{talk.end}}{{/talk.start}}</li>
                            <li>{{#i18n}}{{talk.room}}{{/i18n}}</li>
                        </ul>
                        <div class="show-for-small-only"><hr /></div>
                    </div>
                    <div class="small-12 medium-8 medium-pull-4 columns">
                        {{#speakers}}
                            <h2><small>{{firstname}} {{lastname}}</small></h2>
                            {{#company}}<p><strong>{{company}}</strong></p>{{/company}}
                            {{description}}
                            <ul class="menu simple">
                                {{#links}}
                                    <li><a href="{{url}}">{{name}}</a></li>
                                {{/links}}
                            </ul>
                        {{/speakers}}
                    </div>
                </div>
            </article>
        </div>
    </div>
</div>



{{> footer}}
