{{> header}}

<div class="mxt-wrapper--page-title">
    <div class="row">
        <div class="columns large-8 large-offset-2">
            <h1 class="text-center">{{post.title}}</h1>
            <hr />
           	<p class="text-center subheader mxt-text--page-title">{{#i18n}}blog.by{{/i18n}} <strong>{{post.author.firstname}}</strong>, {{#i18n}}blog.on{{/i18n}} <strong>{{post.addedAt}}</strong></p><br />
        </div>
    </div>
</div>

<div class="mxt-wrapper--page-content mxt-wrapper--blog-post">
    <div class="row">
        <div class="column large-8 large-offset-2">
            <div class="callout">
			    <p>{{#markdown}}{{post.headline}}{{/markdown}}</p>
                <hr />
			    <p>{{#markdown}}{{post.content}}{{/markdown}}</p>
		    </div>
	    </div>
 	</div>
</div>

{{> footer}}
