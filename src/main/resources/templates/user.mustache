{{> header}}

<div class="mxt-wrapper--space"></div>

<div class="row">
    <div class="column large-8 large-offset-2">

        <h1 class="text-center">{{user.firstname}} {{user.lastname}}</h1>
        <hr />
        <div class="callout">
            <article>
                <p class="subheader">{{user.company}}</p>
                <p>{{user.description}}</p>
                <p class="subheader">
                    {{#user.links}}
                        <a href="{{url}}">{{name}}</a> /
                    {{/user.links}}
                </p>
            </article>
        </div>
    </div>
</div>

{{> footer}}