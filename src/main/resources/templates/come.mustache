{{> header}}

<div class="mxt-wrapper--page-title">
    <div class="row">
        <div class="columns large-12">
            <h1 class="text-center">{{#i18n}}come.title{{/i18n}}</h1>
            <p class="text-center">
                Manufacture des tabacs - 6 rue Professeur Rollet - 69008 Lyon
            </p>
        </div>
    </div>
</div>

<div class="mxt-wrapper--page-content">
    <div class="row">
        <div class="column large-12">

            <div class="callout">
                <p class="text-center lead">{{#i18n}}come.ticket{{/i18n}}</p>

                <h2 class="text-center mxt-subheader--space">{{#i18n}}home.wrapper.participate{{/i18n}}</h2>

                <p class="text-center lead">
                    <a href="{{localePrefix}}/ticketing" class="button hollow mxt-anchor--uppercase">{{#i18n}}home.wrapper.submit{{/i18n}}</a>
                </p>

                <h2 class="text-center mxt-subheader--space">{{#i18n}}come.orientation.tocome.title{{/i18n}}</h2>

                <div>
                    Conference take place at <a target="_blank" href="http://www.univ-lyon3.fr/campus-de-la-manufacture-des-tabacs-31126.kjsp">Manufacture des tabacs</a> : 6 rue Professeur Rollet
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1222.4017769127167!2d4.861762700872849!3d45.74885156583528!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47f4ea7236bdf0d9%3A0xe6b51aaf8ec933da!2s6+Rue+Professeur+Rollet!5e0!3m2!1sen!2sfr!4v1556227083061!5m2!1sen!2sfr"
                            width="100%" height="300" frameborder="0" style="border:0;width:100%" allowfullscreen></iframe>
                    <a href="https://www.google.com/maps/place/6+Rue+Professeur+Rollet/@45.7488516,4.8617627,18.19z"
                       target="_blank">{{#i18n}}come.map.link{{/i18n}}</a><br/>
                </div>

                <p class="text-center lead">{{#i18n}}come.map.label{{/i18n}}</p>

                <div class="row align-middle">
                    <div class="column small-1">
                        <img src="/images/svg/transport/primary/transport_flight.svg" class="mxt-icon--social" alt="Come by flight">
                    </div>
                    <div class="column small-11">
                        <p>{{#i18n}}come.plane.detail{{/i18n}}</p>
                    </div>
                </div>
                <div class="row align-middle">
                    <div class="column small-1">
                        <img src="/images/svg/transport/primary/transport_railway.svg" class="mxt-icon--social" alt="Come by train">
                    </div>
                    <div class="column small-11">
                        <p>{{#i18n}}come.train.detail{{/i18n}}</p>
                    </div>
                </div>
                <div class="row align-middle">
                    <div class="column small-1">
                        <img src="/images/svg/transport/primary/transport_bus.svg" class="mxt-icon--social" alt="Come by public transportation">
                    </div>
                    <div class="column small-11">
                        <p>{{#i18n}}come.public.detail{{/i18n}}</p>
                    </div>
                </div>
                <div class="row align-middle">
                    <div class="column small-1">
                        <img src="/images/svg/transport/primary/transport_bike.svg" class="mxt-icon--social" alt="Come by bike">
                    </div>
                    <div class="column small-11">
                        <p>{{#i18n}}come.bike.detail{{/i18n}}</p>
                    </div>
                </div>
                <div class="row align-middle">
                    <div class="column small-1">
                        <img src="/images/svg/transport/primary/transport_car.svg" class="mxt-icon--social" alt="Come by car">
                    </div>
                    <div class="column small-11">
                        <p>{{#i18n}}come.car.detail{{/i18n}}</p>
                    </div>
                </div>
            </div>


            <div class="callout">
                <h2 class="text-center mxt-subheader--space">{{#i18n}}come.orientation.manuf.title{{/i18n}}</h2>

                <p class="text-center lead">{{#i18n}}come.orientation.manuf.lead{{/i18n}}</p>


                <p>{{#i18n}}come.orientation.manuf.desc{{/i18n}}</p>

                <h3 class="text-center subheader">{{#i18n}}come.floor0.title{{/i18n}}</h3>
                <p>{{#i18n}}come.floor0.summary{{/i18n}}</p>
                <picture>
                    <source srcset="images/facilities/manu-map-floor0-640.webp 640w,images/facilities/manu-map-floor0-1200.webp"
                            type="image/webp"/>
                    <source srcset="images/facilities/manu-map-floor0_640.png 640w, images/facilities/manu-map-floor0-1200.png"/>
                    <img src="images/facilities/manu-map-floor0-640.png" alt="Manufacture des tabacs floor 0">
                </picture>

                <h3 class="text-center subheader">{{#i18n}}come.floorm.title{{/i18n}}</h3>
                <p>{{#i18n}}come.floorm.summary{{/i18n}}</p>
                <picture>
                    <source srcset="images/facilities/manu-map-floor-es-640.webp 640w,images/facilities/manu-map-floor-es-1200.webp"
                            type="image/webp"/>
                    <source srcset="images/facilities/manu-map-floor-es_640.png 640w, images/facilities/manu-map-floor-es-1200.png"/>
                    <img src="images/facilities/manu-map-floor-es-640.png" alt="Manufacture des tabacs floor Mezzanine">
                </picture>

                <h3 class="text-center subheader">{{#i18n}}come.floor1.title{{/i18n}}</h3>
                <p>{{#i18n}}come.floor1.summary{{/i18n}}</p>
                <picture>
                    <source srcset="images/facilities/manu-map-floor1-640.webp 640w,images/facilities/manu-map-floor1-1200.webp"
                            type="image/webp"/>
                    <source srcset="images/facilities/manu-map-floor1_640.png 640w, images/facilities/manu-map-floor1-1200.png"/>
                    <img src="images/facilities/manu-map-floor1-640.png" alt="Manufacture des tabacs floor 1">
                </picture>

                <p>{{#i18n}}come.floor1.sponsor{{/i18n}}</p>

                <picture>
                    <source srcset="images/facilities/manu-map-sponsor-640.webp 640w,images/facilities/manu-map-sponsor-1200.webp"
                            type="image/webp"/>
                    <source srcset="images/facilities/manu-map-sponsor.png 640w, images/facilities/manu-map-sponsor-1200.png"/>
                    <img src="images/facilities/manu-map-sponsor-640.png" alt="Manufacture des tabacs floor 0">
                </picture>

                <div class="row align-middle">
                    <div class="column small-4">
                        <ul>
                            <li>A : SOCIETE GENERALE</li>
                            <li>B : BONITASOFT</li>
                            <li>C : SOPRA STERIA</li>
