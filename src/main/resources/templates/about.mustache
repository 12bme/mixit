{{> header}}

<div class="mxt-wrapper--space"></div>

<div class="row">
    <div class="column large-8 large-offset-2">

        <h1 class="text-center">{{#i18n}}about.title{{/i18n}}</h1>
        <p class="text-center lead">{{#i18n}}about.story1{{/i18n}}</p>
        <p class="text-center">{{#i18n}}about.story2{{/i18n}}</p>
        <p class="text-center">{{#i18n}}about.story3{{/i18n}}</p>
        <hr/>

        <h2 class="subheader text-center mxt-subheader--space">{{#i18n}}about.teamtitle{{/i18n}}</h2>

        <div class="callout mxt-wrapper--callout">
        {{#staff}}
            <div class="row align-middle">
                <div class="small-12 medium-4 columns text-center">
                    <img src="https://www.gravatar.com/avatar/{{logoUrl}}" class="mxt-img--team"/>
                </div>
                <div class="small-12 medium-8 columns">
                    <h3>{{firstname}} {{lastname}}</h3>
                    {{description}}
                    <ul class="menu simple">
                    {{#links}}
                        <li><a href="{{url}}" target="_blank">{{name}}</a></li>
                    {{/links}}
                    </ul>
                </div>
            </div>
        {{/staff}}

        </div>
    </div>
</div>

{{> footer}}
