{{> header}}

<div class="mxt-wrapper--space"></div>

<div class="row">
  <div class="column large-8 large-offset-2">

    <h1 class="text-center">{{#i18n}}sponsors.title{{/i18n}}</h1>
    <p class="text-center">{{#i18n}}sponsors.text{{/i18n}}</p>
    <hr />

    <h2 class="subheader text-center">{{#i18n}}sponsors.gold{{/i18n}}</h2>

    <div class="row callout align-middle">
        <div class="small-12 columns"><hr /></div>
        {{#sponsors-gold}}
            <div class="small-12 medium-4 columns text-center">
                <img src="/images/{{sponsor.logoUrl}}" class="mxt-img--sponsors" id="{{#urlEncode}}{{sponsor.login}}{{/urlEncode}}"/>
            </div>
            <div class="small-12 medium-8 columns">
                {{sponsor.shortDescription}}
                <ul class="menu simple">
                    {{#sponsor.links}}
                        <li><a href="{{url}}" target="_blank">{{name}}</a></li>
                    {{/sponsor.links}}
                </ul>
            </div>
            <div class="small-12 columns"><hr /></div>
        {{/sponsors-gold}}
    </div>

